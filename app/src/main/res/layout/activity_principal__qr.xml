<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSmart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Offerrs"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/avatar"
        android:layout_marginTop="15dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtSmart"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/imgEmail"
        android:layout_marginTop="25dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txtSmart"
       android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mail5"
        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_toRightOf="@+id/imgEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSmart"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"

        />
    <ImageView
        android:id="@+id/imgBirtday"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imgEmail"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/calendar512"
        />
    <TextView
        android:id="@+id/txtBirtday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtEmail"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgBirtday"

        />


    </RelativeLayout>
</LinearLayout>
