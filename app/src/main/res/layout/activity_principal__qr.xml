<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMensaje"
        android:textSize="40sp"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2EFEC8"

        tools:context=".MainActivity">


    </RelativeLayout>

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickBtn1"
        android:text="Atras"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onClickBtn1"
        android:layout_gravity="center_horizontal"
        android:text="Salir"

        android:textSize="20sp" />
    <TextView
        android:id="@+id/txtEmail"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/btnSalir"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtBirtday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_below="@+id/txtEmail"
        android:layout_toRightOf="@+id/imgBirtday"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/txtFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtBirtday"
        android:layout_toRightOf="@+id/imgFriends"
        android:layout_marginTop="25dp"

        />

</LinearLayout>
